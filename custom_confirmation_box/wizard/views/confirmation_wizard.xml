<openerp>
    <data>
    <record	id="confirmation_box"	model="ir.ui.view">
            <field	name="name">Confirmation Box</field>
            <field	name="model">confirmation.box</field>
            <field	name="arch"	type="xml">
                <form>
                    <group>
                        <div>
                            <field	name="message" readonly="1"/>
                        </div>
                    </group>
                    <group>
                        <field	name="model_name" invisible="1" />
                        <field	name="object_id" invisible="1" />
                        <field	name="method_name" invisible="1" />
                    </group>
                    <footer>
                        <button name="accept" type="object" string="Accept"/>
                        <button	special="cancel" string="Cancel"/>
                    </footer>
                 </form>
            </field>
    </record>


    </data>
</openerp>