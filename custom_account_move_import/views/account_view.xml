<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account Journal form view-->
    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">account.journal.sg.form.inherit</field>
        <field name="model">account.journal</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="linked_analytic_account_id"/>
                <field name="linked_analytic_tag_id"/>
            </field>
        </field>
    </record>

    <!-- Analytic Account form view
    <record id="view_account_analytic_account_form" model="ir.ui.view">
        <field name="name">account.analytic.account.form.inherit</field>
        <field name="model">account.analytic.account</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <field name="group_id" position="after">
                <field name="micros_store_id"/>
                <field name="micros_store_name"/>
                <field name="micros_alternative_name"/>
            </field>
        </field>
    </record>
-->

    <!-- Journal Entry form view -->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.view_move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="micros_tax_number"/>
            </xpath>
            <field name="ref" position="after">
                <field name="micros_file_name"/>
            </field>
        </field>
    </record>

    <!-- Journal Item list view -->
    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="name">account.view.move.line.tree.inherit</field>
        <field name="model">account.move.line</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="micros_tax_number"/>
            </xpath>
        </field>
    </record>

    <!-- Journal Item search view -->
    <record id="view_account_move_line_filter" model="ir.ui.view">
        <field name="name">account.view.move.line.search.inherit</field>
        <field name="model">account.move.line</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='partner']" position="before">
                <filter string="Micros Transaction ID" name="micros_tax_number" context="{'group_by':'micros_tax_number'}"/>
            </xpath>
        </field>
    </record>


</odoo>
