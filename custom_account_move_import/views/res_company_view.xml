<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Company form view-->
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">res.company.form.inherit</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="default_account_configurations" string="Default Account Configurations">
                    <separator string="Sales Entries" colspan="4" />
                    <group col="4">
                        <field name="sale_account_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="receivable_account_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="tax_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="sale_journal_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                    </group>
                    <separator string="COGS Entries" colspan="4" />
                    <group col="4">
                        <field name="inventory_account_id"
                               options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="cogs_account_id"
                               options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                    </group>
                    <separator string="Vendor Bill" colspan="4" />
                    <group col="4">
                        <field name="product_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="expense_account_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="purchase_journal_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="purchase_tax_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="payable_account_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                    </group>
                    <separator string="Payment methods names" colspan="4" />
                    <field name="actual_payment_methods"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>