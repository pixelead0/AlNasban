<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view of Vendor Bill Import -->
        <record id="view_import_vendor_bill_form_view" model="ir.ui.view">
            <field name="name">view.import.vendor.bill.form.view</field>
            <field name="model">import.vendor.bill</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Import Vendor Bill">
                    <group col="4">
                        <separator string="Select your file :" colspan="4" />
                        <field name="xls_file" filename="filename" />
                        <field name="filename" invisible="1" />
                    </group>
                    <group col="4">
                        <field name="product_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="expense_account_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="purchase_journal_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="payable_account_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                        <field name="tax_id" options="{'no_create_edit':True, 'no_open':True,'no_create':True}"/>
                    </group>
                <footer>
                    <button name="import_vendor_bill" string="Import" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
                </form>
            </field>
        </record>

        <!-- Action of Vendor Bill Import -->
        <record id="action_vendor_bill_import" model="ir.actions.act_window">
            <field name="name">Import Vendor Bill</field>
            <field name="res_model">import.vendor.bill</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_vendor_bill_import" action="action_vendor_bill_import" name="Import Vendor Bill"
                  parent="account_accountant.menu_accounting"
                  groups="account.group_account_invoice"
                  sequence="19" />

    </data>
</odoo>